{
  "$schema": "http://json-schema.org/draft-07/schema",
  "type": "object",
  "title": "AWS Security information",
  "description": "Informs downstream services of ports to open for communication",
  "additionalProperties": false,
  "required": [
    "groups"
  ],
  "properties": {
    "groups": {
      "type": "object",
      "title": "AWS Security Group information",
      "description": "Informs downstream services of ports to open for communication",
      "patternProperties": {
        "^.*$": {
          "type": "object",
          "required": [
            "arn",
            "port",
            "protocol"
          ],
          "properties": {
            "arn": {
              "title": "Security Group ARN",
              "$ref": "./aws-arn.json"
            },
            "port": {
              "title": "Network Port",
              "$ref": "./port.json"
            },
            "protocol": {
              "title": "Network Protocol",
              "type": "string",
              "enum": [
                "tcp",
                "udp"
              ]
            }
          }
        }
      },
      "additionalProperties": false
    }
  }
}
